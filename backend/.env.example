# ====================================
# SERVER CONFIGURATION
# ====================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ====================================
# DATABASE
# ====================================
DATABASE_URL="postgresql://user:password@localhost:5432/whatshybrid?schema=public"

# ====================================
# REDIS
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# MONGODB (for analytics & logs)
# ====================================
MONGODB_URL="mongodb://localhost:27017/whatshybrid"

# ====================================
# VECTOR DATABASE (Qdrant)
# ====================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ====================================
# JWT & AUTHENTICATION
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ====================================
# AI PROVIDERS - OpenAI
# ====================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=
OPENAI_DEFAULT_MODEL=gpt-4o

# ====================================
# AI PROVIDERS - Anthropic
# ====================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# ====================================
# AI PROVIDERS - Google AI
# ====================================
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_DEFAULT_MODEL=gemini-1.5-pro

# ====================================
# AI PROVIDERS - Groq
# ====================================
GROQ_API_KEY=your-groq-api-key
GROQ_DEFAULT_MODEL=llama-3.1-70b-versatile

# ====================================
# AI PROVIDERS - Mistral
# ====================================
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_DEFAULT_MODEL=mistral-large-latest

# ====================================
# AI PROVIDERS - Cohere
# ====================================
COHERE_API_KEY=your-cohere-api-key
COHERE_DEFAULT_MODEL=command-r-plus

# ====================================
# AI PROVIDERS - Together AI
# ====================================
TOGETHER_API_KEY=your-together-api-key
TOGETHER_DEFAULT_MODEL=meta-llama/Llama-3-70b-chat-hf

# ====================================
# AI PROVIDERS - Ollama (Local)
# ====================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2

# ====================================
# AI CONFIGURATION
# ====================================
AI_DEFAULT_PROVIDER=openai
AI_ROUTING_STRATEGY=balanced
AI_CACHE_TTL=3600
AI_MAX_RETRIES=3
AI_TIMEOUT=30000
AI_ENABLE_FALLBACK=true

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_WINDOW_MS=60000
RATE_LIMIT_AI_MAX_REQUESTS=20

# ====================================
# STRIPE (Billing)
# ====================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ====================================
# EMAIL (SMTP)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@whatshybrid.com

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# ====================================
# SECURITY
# ====================================
ENABLE_PII_MASKING=true
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ====================================
# FEATURES
# ====================================
ENABLE_AI_FEATURES=true
ENABLE_RAG=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true

# ====================================
# MONITORING
# ====================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
